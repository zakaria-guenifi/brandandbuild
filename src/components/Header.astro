---
import Navigation from "./Navigation.astro";
import Menu from "./Menu.astro";
import ThemeIcon from "./ThemeIcon.astro";

---
<header>
  <p>Brand&Build</p>
  <ThemeIcon />
  <Menu />
  <nav>
    <Navigation />
  </nav>
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;

    p {
      font-weight: 600;
    }

    nav {
      display: flex;
      gap: 1rem;
    }
  }
</style>